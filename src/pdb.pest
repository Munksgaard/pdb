WHITESPACE = _{ " " | "\n" }

identifier = { ('a'..'z')+ }

unit = { "()" }

tytuple = { "(" ~ ty ~ ("," ~ ty)+ ~ ","? ~ ")" }

tyident = { 'A'..'Z' ~ ASCII_ALPHANUMERIC* }

ty = { unit | tytuple | tyident }

table = { "table" ~ ty }

int = @{
    "-"?
    ~ (ASCII_NONZERO_DIGIT ~ ASCII_DIGIT*)
}

bool = { "true" | "false" }

tuple = { "(" ~ expr ~ ("," ~ expr)+ ~ ","? ~ ")" }

expr = { unit | tuple | int | bool }

insert = { "insert" ~ expr }

select = { "select" }

statement = _{ SOI ~ (insert | select) ~ EOI }